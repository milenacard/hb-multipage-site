section.hero
  div.hero__header-container
    h1.hero__header-title #{heroContent.header}
    h2.hero__header-description #{heroContent.description}
    a.hero__link(href = heroContent.cta.url) #{heroContent.cta.label}
  picture.hero__pictures
    source(media= '(min-width: 320px) and (max-width: 639px)', srcset = heroContent.images.small.url)
    source(media= '(min-width: 640px) and (max-width: 1023px)', srcset = heroContent.images.medium.url)
    source(media= '(min-width: 1024px)', srcset = heroContent.images.large.url)
    img(alt = heroContent.images.large.description).hero__image-container
