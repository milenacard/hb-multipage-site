section.hero
  div.hero__header-container
    h1.hero__header #{heroContent.header}
    h2.hero__description #{heroContent.description}
    a.hero__link(href = heroContent.cta.link)
      button.hero__button #{heroContent.cta.label}
  div.hero__images-container
    picture.hero__pictures
      source(media= '(min-width: 320px) and (min-width: 639px)', srcset = heroContent.images.small.url)
      source(media= '(min-width: 640px) and (min-width: 1023px)', srcset = heroContent.images.medium.url)
      source(media= '(min-width: 1024px)', srcset = heroContent.images.large.url)
      img(alt = heroContent.images.large.description).hero__image
